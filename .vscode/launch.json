    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "php",
            "request": "launch",
            "port": 0,
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-dxdebug.mode=debug,develop",
                "-dxdebug.client_port=${port}",
                "-dxdebug.start_with_request=yes"
            ],
            "program": "${workspaceFolder}/vendor/bin/phpunit",
            "preLaunchTask": "Create Dusk Database",
        },
        {
            "name": "Debug Workbench",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\[http://localhost:([0-9]+)\\].",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            },
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            },
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-dxdebug.mode=debug,develop,profile",
                "-dxdebug.client_port=${port}",
                "-dxdebug.start_with_request=yes"
            ],
            "program": "${workspaceFolder}/vendor/bin/testbench",
            "args": [
                "serve"
            ],
            "preLaunchTask": "Prepare Workbench",
            "postDebugTask": "Kill Laravel Server",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}