{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Prepare Workbench",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create Database",
                "Migrate Database",
                "Create User"
            ]
        },
        {
            "label": "Create Database",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/testbench",
            "args": [
                "package:create-sqlite-db"
            ]
        },
        {
            "label": "Drop Database",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/testbench",
            "args": [
                "package:drop-sqlite-db"
            ]
        },
        {
            "label": "Migrate Database",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/testbench",
            "args": [
                "migrate"
            ]
        },
        {
            "label": "Create User",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/testbench",
            "args": [
                "make:filament-user",
                "--name=${input:devUserName}",
                "--email=${input:devUserEmail}",
                "--password=${input:devUserPassword}"
            ]
        },
        {
            "label": "Kill Laravel Server",
            "type": "shell",
            "command": "pkill",
            "args": [
                "-f",
                "vendor/orchestra/testbench-core/laravel/server.php"
            ]
        },
        {
            "label": "Create Dusk Database",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/testbench-dusk",
            "args": [
                "package:create-sqlite-db"
            ]
        },
        {
            "label": "Drop Dusk Database",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/testbench-dusk",
            "args": [
                "package:drop-sqlite-db"
            ]
        }
    ],
    "inputs": [
        {
            "id": "devUserName",
            "description": "Username:",
            "default": "Max Mustermann",
            "type": "promptString"
        },
        {
            "id": "devUserEmail",
            "description": "Email:",
            "default": "example@example.com",
            "type": "promptString"
        },
        {
            "id": "devUserPassword",
            "description": "Password:",
            "default": "test",
            "type": "promptString"
        },
    ]
}